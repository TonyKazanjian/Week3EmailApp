<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tv_email_callout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:text="A"
        android:gravity="center"
        android:background="@android:color/black"/>

    <LinearLayout android:layout_width = "0dp"
                  android:layout_height = "wrap_content"
                  android:orientation="vertical"
                  android:layout_weight="1">

        <TextView
            android:id="@+id/tv_email_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="You've won!"/>

        <TextView
            android:id="@+id/tv_email_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_author"/>

        <TextView
            android:id="@+id/tv_email_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder_content"
            android:lines="1"
            android:ellipsize="end"/>

    </LinearLayout>

</merge>