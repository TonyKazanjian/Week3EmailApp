    <style name="Author">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textSize">12sp</item>
        <item name="robotoFont"> BlackItalic</item>
    </style>

    <style name="Body1">
        <item name="android:textColor">@color/text_secondary</item>
