<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/list_selector">

    <TextView
        android:id="@+id/tv_email_callout"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="16dp"
        android:text="A"
        android:gravity="center"
        android:background="@android:color/black"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


    <TextView
        android:id="@+id/tv_email_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_email_callout"
        android:text="You've won!"/>

    <TextView
        android:id="@+id/tv_email_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_email_subject"
        android:layout_toRightOf="@+id/tv_email_callout"
        android:text="@string/placeholder_author"/>

    <TextView
        android:id="@+id/tv_email_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_content"
        android:lines="1"
        android:ellipsize="end"
        android:layout_below="@+id/tv_email_author"
        android:layout_toRightOf="@+id/tv_email_callout" />


</RelativeLayout>